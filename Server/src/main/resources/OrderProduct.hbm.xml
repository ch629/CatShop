<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="uk.ac.brighton.uni.ch629.catshop.data.OrderProduct" table="ORDER_PRODUCT">
        <meta attribute="class-description">
            Join table between Orders and Products
        </meta>

        <composite-id name="orderProductId"
                      class="uk.ac.brighton.uni.ch629.catshop.data.OrderProductId">
            <key-property name="orderID" type="int" column="ORDER_ID"/>
            <key-property name="productNumber" type="int" column="PRODUCT_NUMBER"/>
        </composite-id>

        <many-to-one name="order" column="ORDER_ID"
                     class="uk.ac.brighton.uni.ch629.catshop.data.Order"/>
        <many-to-one name="product" column="PRODUCT_NUMBER"
                     class="uk.ac.brighton.uni.ch629.catshop.data.Product"/>
    </class>
</hibernate-mapping>